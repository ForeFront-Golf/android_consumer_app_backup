<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13.5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_cart_item_name"
                fontPath="fonts/Montserrat_Bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="13.5dp"
                android:text="@string/item_name"
                android:textColor="@color/fore_order_blue"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textview_cart_item_instructions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/order_details_max_text_size"
                android:text="Special instructions something something something"
                android:textColor="@color/fore_order_blue_percent_50"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/llayout_option_items_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="19.5dp"
                android:maxWidth="@dimen/order_details_max_text_size"
                android:orientation="vertical" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/button_remove_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="13.5dp"
            android:layout_marginTop="15.5dp"
            android:background="@color/transparent"
            android:src="@drawable/icon_delete_item" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/button_remove_item"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_number_of_cart_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="15.5dp"
                android:text="1"
                android:textColor="@color/fore_order_blue" />

            <TextView
                android:id="@+id/textview_price_of_cart_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="4dp"
                android:paddingBottom="18.5dp"
                android:text="$5.00"
                android:textColor="@color/fore_order_blue_percent_50"
                android:textSize="14sp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>