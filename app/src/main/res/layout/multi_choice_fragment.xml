<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlayout_multi_choice"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textColor="@color/fore_order_blue_percent_50"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            android:text="@string/select_any"/>

        <TextView
            android:id="@+id/textview_required_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:textColor="@color/fore_order_red"
            android:textSize="12dp"
            android:text="@string/required"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/fore_order_blue_percent_50"/>

    <com.rhinoactive.generalutilities.views.AdvancedCheckboxGroup
        android:id="@+id/acheckboxgroup_multi_choice_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

</LinearLayout>